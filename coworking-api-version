openapi: "3.0.2"
info:
  title: Coworking
  version: "0.0.3"
servers:
  - url: https://cwrking-server.herokuapp.com/v1
paths:
  /user:
    get:
      tags:
        - User
      summary: "Returns all Users"
      responses:
        "200":
          description: OK
    post:
      tags:
        - User
      summary: "Creates new User"
      requestBody:
        content:
          application/json:
            schema:
              $ref: "#/components/schemas/User"
      responses:
        "201":
          description: OK
    put:
      tags:
        - User
      summary: "Update User"
      responses:
        "201":
          description: OK
      requestBody:
        content:
          application/json:
            schema:
              $ref: "#/components/schemas/User-with-ID"

    delete:
      tags:
        - User
      summary: "Delete a User"
      responses:
        "201":
          description: "Returns status code of operation with a value of 0 OR 1"
      requestBody:
        content:
          application/json:
            schema:
              $ref: "#/components/schemas/User-with-ID"

