          type: number
        age:
          type: number
        gender:
          type: string
          enum:
            - male
            - female
            - null
        username:
          type: string
        password:
          type: string
        title:
          type: string
        media:
          type: string
      xml:
        name: User
    User-with-ID:
      type: object
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        surname:
          type: string
        address:
          type: object
          properties:
            street:
              type: string
